<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Wildlife Details</title>
    <style>
        @import url("https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900&display=swap");

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: "Poppins", sans-serif;
            font-size:25px;

        }
        #wildlife-details {
            width: 100vw;
            height: 100vh;
            background-color: #061227;
            color: white;
            display: flex;
            padding: 2em;
        }
        #info {
            padding: 2em;
            display: flex;
            flex-direction: column;
            gap: 1em;
            width: 100%;
        }
        .rating {
            background-color:paleturquoise;
            color: black;
            padding: 1.5em 2em;
            border-radius: 1em;
            display: flex;
            flex-direction: column;
            gap: 1em;
            width: 100%;
        }
        h1 {
            font-size: 2em;
            margin-bottom: 1em;
        }
        p {
            font-size: 1em;
            line-height: 1.5;
        }
        .feature-list {
            list-style: none;
            padding-left: 0;
        }
        .feature-list li {
            margin-bottom: 0.5em;
        }
    </style>
</head>
<body>
    <div id="wildlife-details">
        <div class="rating">
            <h2 style="text-align: center; margin-bottom: 3px;"><strong>Details</strong></h2>
            <ul class="feature-list">
                <% if (wildlife) { %>
                    <li><strong>Common Name:</strong> <%= wildlife.name %></li>
                    <% if (wildlife.taxonomy && wildlife.taxonomy.scientific_name) { %>
                        <li><strong>Scientific Name:</strong> <%= wildlife.taxonomy.scientific_name %></li>
                    <% } %>
                    <% if (wildlife.locations && wildlife.locations.length) { %>
                        <li><strong>Locations:</strong> <%= wildlife.locations.join(', ') %></li>
                    <% } %>
                    <% if (wildlife.characteristics) { %>
                        <% if (wildlife.characteristics.habitat) { %>
                            <li><strong>Habitat:</strong> <%= wildlife.characteristics.habitat %></li>
                        <% } %>
                        <% if (wildlife.characteristics.top_speed) { %>
                            <li><strong>Top Speed:</strong> <%= wildlife.characteristics.top_speed %></li>
                        <% } %>
                        <% if (wildlife.characteristics.lifespan) { %>
                            <li><strong>Lifespan:</strong> <%= wildlife.characteristics.lifespan %></li>
                        <% } %>
                        <% if (wildlife.characteristics.weight) { %>
                            <li><strong>Weight:</strong> <%= wildlife.characteristics.weight %></li>
                        <% } %>
                        <% if (wildlife.characteristics.length) { %>
                            <li><strong>Length:</strong> <%= wildlife.characteristics.length %></li>
                        <% } %>
                        <% if (wildlife.characteristics.diet) { %>
                            <li><strong>Diet:</strong> <%= wildlife.characteristics.diet %></li>
                        <% } %>
                        <% if (wildlife.characteristics.average_litter_size) { %>
                            <li><strong>Average Litter Size:</strong> <%= wildlife.characteristics.average_litter_size %></li>
                        <% } %>
                        <% if (wildlife.characteristics.predators) { %>
                            <li><strong>Predators:</strong> <%= wildlife.characteristics.predators %></li>
                        <% } %>
                        <% if (wildlife.characteristics.main_prey) { %>
                            <li><strong>Main Prey:</strong> <%= wildlife.characteristics.main_prey %></li>
                        <% } %>
                        <% if (wildlife.characteristics.lifestyle) { %>
                            <li><strong>Lifestyle:</strong> <%= wildlife.characteristics.lifestyle %></li>
                        <% } %>
                        <% if (wildlife.characteristics.skin_type) { %>
                            <li><strong>Skin Type:</strong> <%= wildlife.characteristics.skin_type %></li>
                        <% } %>
                        <% if (wildlife.characteristics.color) { %>
                            <li><strong>Color:</strong> <%= wildlife.characteristics.color %></li>
                        <% } %>
                    <% } %>
                <% } else { %>
                    <li>No details available for this species.</li>
                <% } %>
            </ul>
        </div>
    </div>
</body>
</html>
